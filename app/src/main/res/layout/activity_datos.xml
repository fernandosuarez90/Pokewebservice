<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="@mipmap/pokeedit"
    android:paddingTop="10dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="372dp"
        android:layout_height="255dp"
        android:paddingTop="400dp"
        app:cardCornerRadius="15dp"

        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="16dp">

        <AbsoluteLayout
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/pokemon_gradient"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="15dp"
                android:layout_y="23dp"
                android:text="Cod:"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="102dp"
                android:layout_y="23dp"
                android:text="Nombre:"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nombreTextView"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_x="177dp"
                android:layout_y="23dp"
                android:textAllCaps="true"
                android:textColor="@android:color/background_dark"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/codigo"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:layout_x="60dp"
                android:layout_y="18dp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_x="12dp"
                android:layout_y="50dp"
                app:srcCompat="@mipmap/uno" />

            <TextView
                android:id="@+id/experiencia"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_x="63dp"
                android:layout_y="62dp"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="46dp"
                android:layout_height="35dp"
                android:layout_x="133dp"
                android:layout_y="51dp"
                app:srcCompat="@mipmap/dos" />

            <TextView
                android:id="@+id/habilidad"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_x="187dp"
                android:layout_y="63dp"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="21dp"
                android:layout_y="82dp"
                android:text="Exp.."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="139dp"
                android:layout_y="81dp"
                android:text="Hab.."
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="46dp"
                android:layout_height="30dp"
                android:layout_x="12dp"
                android:layout_y="97dp"
                app:srcCompat="@mipmap/tres" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="20dp"
                android:layout_y="124dp"
                android:text="Tipo.."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tipo"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_x="64dp"
                android:layout_y="107dp"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="19dp"
                android:layout_y="147dp"
                android:text="Altura:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_x="143dp"
                android:layout_y="145dp"
                android:text="Peso:"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/peso"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_x="197dp"
                android:layout_y="142dp"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/altura"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:layout_x="70dp"
                android:layout_y="142dp"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

        </AbsoluteLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_x="-1dp"
            android:layout_y="-39dp"
            app:srcCompat="@mipmap/pokedexlogo" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>